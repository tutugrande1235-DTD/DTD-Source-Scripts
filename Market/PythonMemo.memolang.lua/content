local key = 94   -- palavras-chave que abrem bloco
local val = 96   -- valores/literals
local spc = 91   -- símbolos e "#end"
do
  -- símbolos e operadores
  memo.addhighl("=", spc)
  memo.addhighl("%+", spc)
  memo.addhighl("%-", spc)
  memo.addhighl("%*", spc)
  memo.addhighl("%/", spc)
  memo.addhighl(":", spc)   -- abre bloco
  memo.addkeyopen(":")
  memo.addhighl("#end", spc)
  memo.addkeyclose("#end")
  -- números
  memo.addhighl("(%d+)", val)
  -- valores literais
  memo.addhighl("True", val)
  memo.addhighl("False", val)
  memo.addhighl("None", val)
  -- palavras-chave que abrem bloco
  memo.addhighl("if", key)
  memo.addhighl("elif", key)
  memo.addhighl("else", key)
  memo.addhighl("for", key)
  memo.addhighl("while", key)
  memo.addhighl("def", key)
  memo.addhighl("class", key)
  memo.addhighl("try", key)
  memo.addhighl("with", key)
  memo.addhighl("match", key)
  -- palavras-chave normais (não abrem bloco)
  memo.addhighl("import", key)
  memo.addhighl("from", key)
  memo.addhighl("as", key)
  memo.addhighl("pass", key)
  memo.addhighl("break", key)
  memo.addhighl("continue", key)
  memo.addhighl("return", key)
  memo.addhighl("raise", key)
  -- operadores lógicos
  memo.addhighl("and", key)
  memo.addhighl("or", key)
  memo.addhighl("not", key)
  memo.addhighl("in", key)
  memo.addhighl("is", key)
end